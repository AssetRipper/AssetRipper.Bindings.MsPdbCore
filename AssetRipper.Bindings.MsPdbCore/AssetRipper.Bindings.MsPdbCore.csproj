<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net9.0</TargetFramework>
		<Nullable>enable</Nullable>
		<AllowUnsafeBlocks>true</AllowUnsafeBlocks>
		<IsAotCompatible>true</IsAotCompatible>
		<CheckForOverflowUnderflow>true</CheckForOverflowUnderflow>

		<Version>1.0.0</Version>
		<AssemblyVersion>$(Version)</AssemblyVersion>
		<Copyright>Copyright © ds5678</Copyright>
		<Authors>ds5678</Authors>
		<Company>AssetRipper</Company>

		<PackageId>AssetRipper.Bindings.MsPdbCore</PackageId>
		<PackageTags>C# Pdb</PackageTags>
		<RepositoryUrl>https://github.com/AssetRipper/AssetRipper.Bindings.MsPdbCore</RepositoryUrl>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<RepositoryType>git</RepositoryType>
		<PackageProjectUrl>$(RepositoryUrl)</PackageProjectUrl>
		<Copyright>Copyright (c) 2024 ds5678</Copyright>
		<Description>Managed wrapper library for mspdbcore.dll</Description>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>

		<GenerateDocumentationFile>true</GenerateDocumentationFile>
		<DocumentationFile>bin\AssetRipper.Bindings.MsPdbCore.xml</DocumentationFile>
		
		<NoWarn>SYSLIB1054;1591</NoWarn>
	</PropertyGroup>

</Project>
